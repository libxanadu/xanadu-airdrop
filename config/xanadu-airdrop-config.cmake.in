# Explain
message("using ${PROJECT_NAME}-config.cmake find")

# Find XANADU_AIRDROP_INCLUDE
find_path(XANADU_AIRDROP_INCLUDE ${PROJECT_NAME}/ HINTS ${CMAKE_INSTALL_PREFIX}/include/)

# Find XANADU_AIRDROP_LIBRARY
if (WIN32)
	find_path(XANADU_AIRDROP_LIBRARY ${PROJECT_NAME}.lib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (MINGW)
	find_path(XANADU_AIRDROP_LIBRARY ${PROJECT_NAME}.dll.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (APPLE)
	find_path(XANADU_AIRDROP_LIBRARY lib${PROJECT_NAME}.dylib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XANADU_AIRDROP_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (UNIX)
	find_path(XANADU_AIRDROP_LIBRARY lib${PROJECT_NAME}.so HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XANADU_AIRDROP_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
endif ()

# Setting
if(XANADU_AIRDROP_INCLUDE AND XANADU_AIRDROP_LIBRARY)
	set(XANADU_AIRDROP_FOUND TRUE)
	add_definitions(-D${XANADU_AIRDROP_BUILD_REPLACE})
endif()
